{
  "extends": [
    "markuplint:recommended"
  ],
  "parser": {
    "\\.hbs$": "@markuplint/mustache-parser"
  },
  "rules": {
    "doctype": false
  },
  "nodeRules": [
    {
      "selector": "img:not([width])",
      "rules": {
        "required-attr": [
          "alt",
          "decoding",
          "loading"
        ]
      }
    }
  ]
}
